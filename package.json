    "@actions/glob": "^0.4.0"
  },
  "devDependencies": {
    "@zeit/ncc": "^0.22.3",
    "babel-eslint": "^9.0.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.1",
